<div class="col-md-6">
  <h4>
    <%= store.name %>
  </h4>
  <div class="row">
    <div class="col-md-8">
      <dl class="dl-horizontal">
        <dt>Name:</dt>
        <dd><%= store.name %></dd>
        <dt>Summary:</dt>
        <dd><%= store.summary %></dd>
        <dt>Stripe id:</dt>
        <dd><%= store.stripe_id %></dd>
        <dt>Product count:</dt>
        <dd><%= store.products.count %></dd>
      </dl>
    </div>
    <div class="col-md-4">
      <%= link_to store_products_path(store, format: :csv), class: 'btn btn-default' do %>
        Export Products
      <% end %>

      <%= link_to new_store_import_products_path(store), class: 'btn btn-default' do %>
        Import Products
      <% end %>

      <%= link_to store_shipping_profiles_path(store), class: 'btn btn-default' do %>
        Shipping Profiles
      <% end %>

      <%= link_to store_products_path(store), class: 'btn btn-default' do %>
        Products
      <% end %>

      <%= link_to store_store_orders_path(store), class: 'btn btn-default' do %>
        Orders
      <% end %>
    </div>
  </div>
  <hr/>
</div>
